<div class="tab-pane" id="put">
	<div class="form-horizontal">
		@using (Html.BeginForm("Update", "Home", FormMethod.Post))
		{
			<fieldset>
			
				<div class="control-group">
					<label class="control-label" for="txtCode">Update of Translation</label>
					<div class="controls">
						@Html.TextBox("Alpha2", null, new { @class = "input-mini", placeholder = "alpha 2", maxlength = "2" })
						@Html.TextBox("Language", null, new { @class = "input-small", placeholder = "lang", maxlength = "2" })
					</div>
				</div>
				<div class="control-group">
					<div class="controls">
						@Html.TextBox("Name", null, new { @class = "input-large", placeholder = "translation" })
					</div>
				</div>
				<div class="control-group">
					<div class="controls">
						<input type="submit" class="btn btn-primary" value="Update" />
						<br />
					</div>
				</div>
			
			</fieldset>
		}
	</div>
</div>
